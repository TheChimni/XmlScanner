@model XmlScannerApp.Models.ViewModel.IndexViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>XML File Scanner</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)
	<fieldset>
		<legend>Postal Address</legend>
		<p>
			@Html.LabelFor(m => m.SampleFiles)
			@Html.DropDownListFor(x => x.SelectedSampleFile, Model.SampleFiles)
			<input type="submit" value="Scan" />
		</p>
	</fieldset>
}
 @{
	 if (Model.Result != null)
	 {
		Html.RenderPartial("Results", Model.Result);
	 }
 }

